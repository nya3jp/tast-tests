<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:tooltipText="button tooltip" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:tooltipText="checkbox tooltip" />

    <CheckBox
        android:id="@+id/checkBoxWithStateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBoxWithStateDescription"
        android:tooltipText="checkbox tooltip" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="seekBar"
        android:max="100"
        android:progress="25" />

    <SeekBar
        android:id="@+id/seekBarNoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="3" />

    <Button
        android:id="@+id/announceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Announce" />

    <Button
        android:id="@+id/toastButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to show toast" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="false" />

</LinearLayout>
