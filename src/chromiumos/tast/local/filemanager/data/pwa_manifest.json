{
  "name": "PWA Open TXT Test App",
  "short_name": "Open TXT Test App",
  "display": "standalone",
  "start_url": "/pwa_index.html",
  "theme_color": "#0000FF",
  "background_color": "#000000",
  "icons": [
    {
      "src": "pwa_icon.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ],
  "file_handlers": [
    {
      "action": "/pwa_index.html",
      "accept": {
        "text/plain": [".txt"]
      },
      "launch_type": "single-client"
    }
  ]
}