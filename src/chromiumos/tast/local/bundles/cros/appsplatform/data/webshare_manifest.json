{
  "name": "Web Share Target Test App",
  "short_name": "Share Target Test App",
  "display": "standalone",
  "start_url": "/webshare_index.html",
  "theme_color": "#000000",
  "background_color": "#000000",
  "icons": [
    {
      "src": "webshare_icon.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ],
  "file_handlers": [
    {
      "action": "/open",
      "accept": {
        "text/plain": [".txt"]
      },
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "link",
      "files": [
        {
          "name": "received_file",
          "accept": "application/json"
        }
      ]
    }
  }
}
